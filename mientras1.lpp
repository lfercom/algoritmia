real base,altura,area
caracter continuar

inicio
    mientras continuar = 'S' haga
        escriba "Base: "
        lea base
        escriba "Altura: "
        lea altura
        area <- base * altura / 2
        escriba "Area = ",area
        llamar nueva_linea
        escriba "Desea continuar (S/N) ? "
        lea continuar
    fin mientras
fin